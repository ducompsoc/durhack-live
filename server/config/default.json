{
  "listen": {
    "host": "localhost",
    "port": 3001
  },
  "flags": {
    "skipEmailVerification": false
  },
  "passport": {
    "local": {
      "usernameField": "email",
      "passwordField": "password",
      "session": true,
      "passReqToCallback": false
    },
    "bearer": {
      "realm": "Users",
      "scope": "api",
      "passReqToCallback": false
    }
  },
  "mysql": {
    "data": {
      "host": "127.0.0.1",
      "port": 3306,
      "database": "durhack",
      "user": "root",
      "password": "strongexamplepassword"
    },
    "session": {
      "host": "127.0.0.1",
      "port": 3306,
      "database": "durhack-session",
      "user": "root",
      "password": "strongexamplepassword"
    }
  },
  "csrf": {
    "enabled": true,
    "secret": "csrfisoverrated",
    "options": {
      "cookieName": "psifi.x-csrf-token",
      "cookieOptions": {
        "sameSite": "strict",
        "path": "/",
        "secure": false
      }
    }
  },
  "cookie-parser": {
    "secret": "thebestsecretforcookies"
  },
  "mailgun": {
    "username": "api",
    "key": "yourAPIKeyHere",
    "domain": "mailgun.durhack.com",
    "host": "api.eu.mailgun.net"
  },
  "session": {
    "name": "session_cookie_name",
    "secret": "session_cookie_secret",
    "resave": false,
    "saveUninitialized": false,
    "cookie": { "secure": false }
  }
}