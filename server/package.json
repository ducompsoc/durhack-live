{
  "$schema": "https://json.schemastore.org/package",
  "name": "durhack-live",
  "version": "1.0.0",
  "private": true,
  "description": "Server for DurHack event site",
  "type": "module",
  "scripts": {
    "start": "node ./dist/main.js",
    "dev": "tsx ./src/main",
    "dev:watch": "tsx watch ./src/main",
    "build": "tsup",
    "prebuild": "npm run type-check",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run --silent",
    "test:debug": "vitest run",
    "test:ci": "vitest run --silent --passWithNoTests",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "Ethan Waite <ethan.w.waite@durham.ac.uk>",
  "contributors": [
    "Joe Clack <durhack@joeclack.me.uk>",
    "Jacob Wrenn <jacob@wrenn.me>"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/config": "^3.3.0",
    "@types/express-mysql-session": "^3.0.0",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.14.10",
    "@types/passport": "^1.0.12",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/passport-local": "^1.0.35",
    "glob": "^11.0.0",
    "tsup": "^8.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@node-oauth/express-oauth-server": "github:node-oauth/express-oauth-server#c58132f",
    "@node-oauth/oauth2-server": "^4.3.0",
    "config": "^3.3.9",
    "csrf-csrf": "^2.3.0",
    "email-validator": "^2.0.4",
    "express-mysql-session": "^3.0.0",
    "express-session": "^1.17.3",
    "form-data": "^4.0.0",
    "http-errors": "^2.0.0",
    "jose": "^4.14.4",
    "lodash": "^4.17.21",
    "mailgun.js": "^9.2.0",
    "mysql2": "^3.6.0",
    "node-fetch": "^3.3.2",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "socket.io": "^4.7.2",
    "tsc-alias": "^1.8.8",
    "zod": "^3.22.4"
  }
}
