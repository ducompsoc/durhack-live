{
  "$schema": "https://json.schemastore.org/package",
  "name": "@durhack/live-server",
  "description": "Server for DurHack event/livestream site",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./dist/main.js",
    "dev": "tsx ./src/main",
    "dev:watch": "tsx watch ./src/main",
    "build": "tsup",
    "prebuild": "pnpm generate && pnpm type-check",
    "generate": "prisma generate",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run --silent",
    "test:debug": "vitest run",
    "test:ci": "vitest run --silent --passWithNoTests",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "Ethan Waite <ethan.w.waite@durham.ac.uk>",
  "contributors": ["Joe Clack <durhack@joeclack.me.uk>", "Jacob Wrenn <jacob@wrenn.me>"],
  "license": "UNLICENSED",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/http-errors": "^2.0.4",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.7.0",
    "prisma": "^5.17.0",
    "tsup": "^8.2.2",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "@durhack/token-vault": "^0.1.2",
    "@keycloak/keycloak-admin-client": "^25.0.6",
    "@node-oauth/oauth2-server": "^5.1.0",
    "@otterhttp/app": "^3.4.4",
    "@otterhttp/cookie-signature": "^3.0.0",
    "@otterhttp/csrf-csrf": "^3.2.0",
    "@otterhttp/errors": "^0.2.1",
    "@otterhttp/parsec": "^0.2.1",
    "@otterhttp/session": "^0.3.1",
    "@prisma/client": "5.17.0",
    "http-errors": "^2.0.0",
    "jose": "^5.6.3",
    "lodash": "^4.17.21",
    "openid-client": "^5.6.5",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8",
    "zod-config": "^0.0.5"
  }
}
